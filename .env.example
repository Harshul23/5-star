# QuickGrab Environment Variables
# Copy this file to .env and fill in your values:
#   cp .env.example .env

# ===========================================
# REQUIRED: Database Configuration
# ===========================================
# PostgreSQL connection string
# Format: postgresql://USERNAME:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL="postgresql://postgres:password@localhost:5432/quickgrab"

# ===========================================
# REQUIRED: Authentication
# ===========================================
# JWT secret key (minimum 32 characters for security)
# Generate one with: openssl rand -base64 32
JWT_SECRET="your-secure-secret-key-change-this-in-production"

# ===========================================
# OPTIONAL: AI Features
# ===========================================
# Anthropic API key for Claude AI features (verification, moderation, search)
# Get one from: https://console.anthropic.com/
ANTHROPIC_API_KEY=""

# ===========================================
# OPTIONAL: Face Matching (AWS Rekognition)
# ===========================================
# AWS credentials for face matching
# Get from: https://aws.amazon.com/rekognition/
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_REGION="us-east-1"

# ===========================================
# OPTIONAL: Face Matching (Face++ Alternative)
# ===========================================
# Face++ API credentials (alternative to AWS Rekognition)
# Get from: https://www.faceplusplus.com/
FACEPP_API_KEY=""
FACEPP_API_SECRET=""

# ===========================================
# OPTIONAL: Verification Thresholds
# ===========================================
# Minimum face match score for auto-approval (0-100)
VERIFICATION_FACE_MATCH_MIN="75"
# Minimum OCR confidence for auto-approval (0-100)
VERIFICATION_OCR_CONFIDENCE_MIN="70"
# Auto-approval face match minimum (0-100)
VERIFICATION_AUTO_APPROVAL_FACE_MIN="75"
# Auto-approval OCR confidence minimum (0-100)
VERIFICATION_AUTO_APPROVAL_OCR_MIN="70"
# Maximum retry attempts for failed verifications
VERIFICATION_MAX_RETRIES="3"
# Processing timeout in milliseconds
VERIFICATION_TIMEOUT_MS="15000"
# Enable/disable features
VERIFICATION_ENABLE_FACE_MATCHING="true"
VERIFICATION_ENABLE_OCR="true"
VERIFICATION_ENABLE_AUTO_APPROVAL="true"

# ===========================================
# OPTIONAL: Real-time Features
# ===========================================
# Socket.io server URL for real-time chat
NEXT_PUBLIC_SOCKET_URL="http://localhost:3001"
